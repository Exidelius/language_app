<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.screens.language_app.EmptyScreen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:titleTextAppearance="@style/toolbar_style"
        android:padding="24sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54sp"
                android:layout_height="54sp"
                android:src="@drawable/empty_user"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello, Emil"
                android:textColor="@color/text_accent"
                android:layout_marginTop="5sp"
                android:textSize="22sp"
                android:letterSpacing="0.01"
                android:fontFamily="@font/fredoka_condensed_medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you ready for learning today?"
                android:textColor="@color/text_accent_transparent"
                android:layout_marginTop="5sp"
                android:textSize="17sp"
                android:letterSpacing="0.01"
                android:fontFamily="@font/fredoka_condensed_medium"/>

        </LinearLayout>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24sp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top users"
                android:textColor="@color/text_base"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:textSize="24sp"
                android:letterSpacing="0.01"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="19sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/usable_inactive">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👨🏻‍🎨"
                    android:layout_marginRight="24sp"
                    android:textSize="36sp"
                    android:textColor="@color/text_base"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vincent van Gogh"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:fontFamily="@font/fredoka_condensed_medium"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:textColor="@color/text_base"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 points"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:fontFamily="@font/fredoka_condensed_medium"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:textColor="@color/text_base"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:padding="19sp"
                android:background="@drawable/usable_inactive">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👨🏻‍🔬"
                    android:layout_marginRight="24sp"
                    android:textSize="36sp"
                    android:textColor="@color/text_base"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dmitri Ivanovich\nMendeleev"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:fontFamily="@font/fredoka_condensed_medium"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:textColor="@color/text_base"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 points"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:fontFamily="@font/fredoka_condensed_medium"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:textColor="@color/text_base"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:padding="19sp"
                android:background="@drawable/usable_inactive">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧛🏻‍♂️"
                    android:layout_marginRight="24sp"
                    android:textSize="36sp"
                    android:textColor="@color/text_base"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vlad Tepes"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:fontFamily="@font/fredoka_condensed_medium"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:textColor="@color/text_base"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8 points"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:fontFamily="@font/fredoka_condensed_medium"
                    android:textSize="17sp"
                    android:letterSpacing="0.01"
                    android:textColor="@color/text_base"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="24sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fredoka_condensed_medium"
                android:letterSpacing="0.01"
                android:text="Available excersises"
                android:textColor="@color/text_base"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="9sp"
                android:layout_marginBottom="9sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/usable_base"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:paddingBottom="10sp"
                    android:layout_marginRight="10sp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_base"
                        android:textSize="90sp"
                        android:textAlignment="center"
                        android:text="🐻‍❄️"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_accent"
                        android:textSize="13sp"
                        android:text="Guess the animal"
                        android:textAlignment="center"
                        android:fontFamily="@font/fredoka_condensed_medium"
                        android:letterSpacing="0.01"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/usable_red"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:paddingBottom="10sp"
                    android:layout_marginLeft="10sp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_base"
                        android:textSize="90sp"
                        android:textAlignment="center"
                        android:text="✏️"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_accent"
                        android:textSize="13sp"
                        android:text="Word practice"
                        android:textAlignment="center"
                        android:fontFamily="@font/fredoka_condensed_medium"
                        android:letterSpacing="0.01"
                        />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="9sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/usable_orange"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:paddingBottom="10sp"
                    android:layout_marginRight="10sp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_base"
                        android:textSize="90sp"
                        android:textAlignment="center"
                        android:text="🔊"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_accent"
                        android:textSize="13sp"
                        android:text="Audition"
                        android:textAlignment="center"
                        android:fontFamily="@font/fredoka_condensed_medium"
                        android:letterSpacing="0.01"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/usable_green"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:paddingBottom="10sp"
                    android:layout_marginLeft="10sp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_base"
                        android:textSize="90sp"
                        android:textAlignment="center"
                        android:text="🎮"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_accent"
                        android:textSize="13sp"
                        android:text="Game"
                        android:textAlignment="center"
                        android:fontFamily="@font/fredoka_condensed_medium"
                        android:letterSpacing="0.01"
                        />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>